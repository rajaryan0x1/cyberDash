<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Password Strength Checker</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <style>
    * {
      box-sizing: border-box;
      padding: 0;
      margin: 0;
    }

    body {
      font-family: 'Inter', sans-serif;
      background: linear-gradient(135deg, #667eea, #764ba2);
      height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      overflow: hidden;
      animation: backgroundFade 10s ease infinite alternate;
    }

    @keyframes backgroundFade {
      0% {
        background: linear-gradient(135deg, #667eea, #764ba2);
      }
      100% {
        background: linear-gradient(135deg, #43cea2, #185a9d);
      }
    }

    .container {
      background: rgba(255, 255, 255, 0.95);
      padding: 2rem;
      border-radius: 16px;
      box-shadow: 0 12px 30px rgba(0, 0, 0, 0.2);
      text-align: center;
      width: 90%;
      max-width: 400px;
      animation: slideIn 1s ease-out;
    }

    @keyframes slideIn {
      from {
        transform: translateY(-50px);
        opacity: 0;
      }
      to {
        transform: translateY(0);
        opacity: 1;
      }
    }

    h2 {
      margin-bottom: 1.5rem;
      color: #333;
    }

    input {
      width: 100%;
      padding: 12px;
      font-size: 1rem;
      border: 1px solid #ccc;
      border-radius: 8px;
      outline: none;
      transition: border-color 0.3s ease;
    }

    input:focus {
      border-color: #667eea;
    }

    .strength {
      margin-top: 1.5rem;
      font-weight: 600;
      font-size: 1.1rem;
      transition: all 0.4s ease;
    }

    .strength.weak {
      color: #e74c3c;
    }

    .strength.medium {
      color: #f39c12;
    }

    .strength.strong {
      color: #27ae60;
    }

    .footer {
      margin-top: 2rem;
      font-size: 0.85rem;
      color: #888;
    }
  </style>
</head>
<body>
  <div class="container">
    <h2>üîê Password Strength Checker</h2>
    <input type="password" id="passwordInput" placeholder="Type your password..." />
    <div id="strengthText" class="strength"></div>
    <div class="footer">Your password never leaves your browser üëÄ</div>
  </div>

  <script>
    const passwordInput = document.getElementById('passwordInput');
    const strengthText = document.getElementById('strengthText');

    passwordInput.addEventListener('input', () => {
      const value = passwordInput.value;
      let strength = "Weak";
      let color = "weak";

      if (value.length >= 8 && /[A-Z]/.test(value) && /\d/.test(value) && /[\W_]/.test(value)) {
        strength = "Strong";
        color = "strong";
      } else if (value.length >= 6 && (/[A-Z]/.test(value) || /\d/.test(value))) {
        strength = "Medium";
        color = "medium";
      }

      strengthText.textContent = `Strength: ${strength}`;
      strengthText.className = `strength ${color}`;
    });
  </script>
</body>
</html>
